<article>
    <h2> Edit Post </h2>
    <form class="update-post-form">
        <div>
            <input id="post-title" type="text" value="{{post.title}}">
        </div>
        <div>
            Posted by you on {{format_date post.created_at}}
            <br>
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <div>
            <label for="post-text">Post</label>
            <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
        </div>
        <button type="submit">Save all changes</button>
        <button type="button" class="delete-post-btn">Delete this post</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>