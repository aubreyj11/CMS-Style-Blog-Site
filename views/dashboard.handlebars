{{#if posts.length}}
<section>
    <h2>Your Blog Posts</h2>
    <ol class="dashboard-posts">
        {{#each posts as |post|}}
        <li>
            {{> dashboardInfo post}}
        </li>
        {{/each}}
    </ol>
</section>
{{else}}
<section>
    <h3>You dont have any posts yet</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add a new post</a></button>